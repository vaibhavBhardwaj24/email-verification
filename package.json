{
  "name": "email-verification-module",
  "version": "1.0.0",
  "description": "Node.js email verification module using SMTP protocol with DNS MX lookup",
  "main": "emailVerifier.js",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:single": "jest emailVerifier.test.js",
    "start": "node server.js",
    "dev": "node server.js"
  },
  "keywords": [
    "email",
    "verification",
    "smtp",
    "dns",
    "mx-records",
    "email-validation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "emailVerifier.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
